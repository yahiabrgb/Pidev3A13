{% extends 'base.html.twig' %}
{% block container %}
    <main>
        <div class="container">
            <!--sections-->
            <div class="row"   >

                <div class="helpforum" >
                    <div class="col-12 security">
                        <h3>Mes réclamations</h3>

                        <hr>
                    </div>
                    <div class="row">
                        <div class="col-12">

                            <div class="bloktext">
                                <table class="table table-hover">
                                    <thead>
                                    <tr>
                                        <th scope="col">Date</th>
                                        <th scope="col">Type</th>
                                        <th scope="col">Status</th>
                                        <th scope="col">Modifier</th>
                                        <th scope="col">Consulter</th>
                                        <th scope="col">Supprimer</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for r in reclamations %}
                                        <tr>
                                            <th scope="row">{{ r.dateCreation | date }}</th>
                                            <td>{{ r.type }}</td>
                                            {% if r.status==0 %}
                                                <td>En cours</td>
                                                <td><a href="{{ path('updatereclamation',{'id':r.id}) }}">Modifier</a></td>
                                            {% else %}
                                                <td>traité</td>
                                                <td>Modifier</td>
                                            {% endif %}
                                            <td><a href="{{ path('consultereclamation',{'id':r.id}) }}">Consulter</a></td>
                                            <td><a href="{{ path('deletereclamation',{'id':r.id}) }}">Supprimer</a></td>

                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <a href="{{ path('createreclamation') }}">Passer Une Autre Reclamation </a>
                    </div>
                </div>
            </div>

        </div>

    </main>

{% endblock %}