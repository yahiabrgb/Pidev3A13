{% extends 'admin.html.twig' %}
{% block body %}
<section class="content home">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-5 col-md-5 col-sm-12">
                <h2>Dashboard
                    <small>Welcome to Talentaholic</small>
                </h2>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-12 text-right">
                <div class="inlineblock text-center m-r-15 m-l-15 hidden-md-down">
                    <div class="sparkline" data-type="bar" data-width="97%" data-height="25px" data-bar-Width="2" data-bar-Spacing="5" data-bar-Color="#fff">3,2,6,5,9,8,7,9,5,1,3,5,7,4,6</div>
                    <small class="col-white">Visitors</small>
                </div>
                <div class="inlineblock text-center m-r-15 m-l-15 hidden-md-down">
                    <div class="sparkline" data-type="bar" data-width="97%" data-height="25px" data-bar-Width="2" data-bar-Spacing="5" data-bar-Color="#fff">1,3,5,7,4,6,3,2,6,5,9,8,7,9,5</div>

                </div>
                <button class="btn btn-white btn-icon btn-round hidden-sm-down float-right m-l-10" type="button">
                    <i class="zmdi zmdi-plus"></i>
                </button>
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Talentaholic</a></li>
                    <li class="breadcrumb-item active">Reclamations</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="admin-dashone-data-table-area mg-b-15">
        <div class="container-fluid">
            <div class="row ">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="body table-responsive members_profiles">
                            {% for r in reclamation %}
                                <div class="cp-field">
                                    <h5>Type</h5>
                                    <div class="form-group">
                                        {{ r.type }}
                                    </div>
                                </div>
                                {% if r.status==0 %}
                                    <div class="cp-field">
                                        <h5>Status</h5>
                                        <div class="form-group">
                                            En cours
                                        </div>
                                    </div>
                                {% else %}
                                    <div class="cp-field">
                                        <h5>Status</h5>
                                        <div class="form-group">
                                            traite
                                        </div>
                                    </div>
                                {% endif %}
                                <div class="cp-field">
                                    <h5>Description</h5>
                                    {{ r.description }}
                                </div>
                                {% if r.status==1 %}
                                    <div class="cp-field">
                                        <h5>Reponse</h5>
                                        {{ r.reponse }}
                                    </div>
                                {% else %}
                                    {{ form_start(form) }}
                                    <div class="cp-field">
                                        {{ form_widget(form.Reponse) }}
                                    </div>
                                    <div class="cp-field">
                                        {{ form_widget(form.Repondre) }}
                                    </div>
                                    {{ form_end(form) }}
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
{% endblock %}
